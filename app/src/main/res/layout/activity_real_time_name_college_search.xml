<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2F38"
    tools:context=".CollegeRealTimeNameSearchActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/college_name_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/college_search_edit_text" />

    <EditText
        android:id="@+id/college_search_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="College Name"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#45FFFFFF"
        app:backgroundTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/college_name_recycler"
        app:layout_constraintStart_toStartOf="@+id/college_name_recycler"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>